<style>
.para-1{
    padding: 15px 0;
    margin: 0;
    letter-spacing: 0.1rem;
    font-size: 1.8rem;
    font-weight: 500;
    text-transform:capitalize;
}

</style>

<div class="">
    <p class="para-1 {{section.settings.text_alignment}}">{{section.settings.top_bar_text}}</p>
</div>

{% schema %}
{
  "name": "top bar",
  "tag": "section",
  "settings": [
    {
      "type": "text",
      "id": "top_bar_text",
      "label": "Text",
      "default":"hello"
    },
    {
        "type": "select",
        "id": "text_alignment",
        "options": [
          {
            "value": "left",
            "label":"left"
          },
          {
            "value": "center",
            "label":"center"
          },
          {
            "value": "right",
            "label":"right"
          }
        ],
        "default": "center",
        "label":"center"
      }
  ],
  "presets": [
    {
      "name": "top bar"
    }
  ]
}
{% endschema %}
